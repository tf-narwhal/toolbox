# top-most EditorConfig file
root = true

# Terraform file patterns
[*.tf]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

# Terraform JSON file patterns
[*.tf.json]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

# Markdown files
[*.{md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

